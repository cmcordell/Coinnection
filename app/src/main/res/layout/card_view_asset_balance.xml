<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    style="?cardStyle"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/fiat_balance_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/market_value_header"
            android:textColor="?colorTextOverBackgroundSecondary"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fiat_balance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="?colorTextOverBackgroundPrimary"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/fiat_balance_label_text_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/asset_balance_label_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/amount_header"
            android:textColor="?colorTextOverBackgroundSecondary"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/fiat_balance_text_view"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/asset_balance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/fiat_balance_text_view"
            android:textColor="?colorTextOverBackgroundPrimary"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/asset_balance_label_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
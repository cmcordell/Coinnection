<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorOverlayBackground"
    android:clickable="true"
    android:focusable="true"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.SearchView
        android:id="@+id/asset_search_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:background="?colorCardBackground"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        style="@style/CoinnectionTheme.AssetSearchView"
        app:queryBackground="@android:color/transparent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/asset_search_results_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/asset_search_view"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="?colorCardBackground"
        android:clipToPadding="false"
        android:scrollbars="vertical"/>
</RelativeLayout>

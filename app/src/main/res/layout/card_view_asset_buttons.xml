<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <Button
        android:id="@+id/remove_asset_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@drawable/selectable_item_primary_ripple"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:text="@string/remove"
        android:textColor="?colorTextOverColorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/space" />

    <Space
        android:id="@+id/space"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toLeftOf="@+id/edit_add_asset_button"
        app:layout_constraintLeft_toRightOf="@+id/remove_asset_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_add_asset_button"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:background="@drawable/selectable_item_primary_ripple"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:text="@string/edit"
        android:textColor="?colorTextOverColorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/space" />
</android.support.constraint.ConstraintLayout>